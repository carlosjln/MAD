{
	"version": "2.0.0",
	"windows": {
		"command": "C:\\Program Files\\nodejs\\node.exe"
	},
	"linux": {
		"command": "/usr/bin/node"
	},
	"tasks": [
		{
			"taskName": "Minify",
			"type": "shell",
			"command": "node",
			"args": [
				".\\build_tasks\\minify.js",
				"${workspaceRoot}"
			],
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"echo": true
			},
			"promptOnClose": true,
			"problemMatcher": "$jshint"
		}
	]
}